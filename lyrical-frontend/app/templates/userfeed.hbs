<div class="input-group">
  <span class="input-group-addon" id="basic-addon1">Search for a song</span>
  {{input value=search}}
  {{!-- <div class="input-group-btn">
    <button {{action 'findSong'}} class='btn btn-default'>Find lyrics</button>
  </div> --}}
</div>

{{#each result in model}}
  {{#search-result result=result}}
    <p>{{result.name}} <span style='opacity:0.5;'>by {{result.artist}} in {{result.album}}</span></p>
  {{/search-result}}
{{/each}}